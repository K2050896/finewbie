    <body>
    {% block content %}
        {% if request.path == "/users/homepage" %}
            <div class="container">
            <div class="jumbotron">
                <h2><font size=150%>Welcome to finewbie, {{ user.fName }}!</font></h2>
                <p> What would you like to do today?</p>

                <style type="text/css">
                    form {
                        display: inline;
                        margin: 30px;
                    }
                </style>

                <form action = "{{ url_for('profiles.create_goal') }}" method = "GET">
                    <button type="button submit" class="btn btn-lg btn-success">Create a Goal!</button>
                </form>

                <form action = "{{ url_for('profiles.my_goals') }}">
                    <button type="button submit" class="btn btn-lg btn-info">View My Goals</button>
                </form>

                <form action = "{{ url_for('users.faqs') }}">
                    <button type="button submit" class="btn btn-lg btn-primary">Learn More</button>
                </form>

            </div>
            </div>
        {% endif %}
    {% endblock %}
