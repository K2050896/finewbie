{% extends "base_template.jinja2" %}

<!-- This is the main login page - 4 things can happen 
everything works well and user gets to go to home page
acct doesn't exist and needs to be redirected to register.jinja2
incorrect pwd so redirect to login again 
reset password -> redirect to reset password page 

Use Bootstrap errors or modals for error messages -->

{% block content %}
    <div class="container">
        <div class="form">
            <form id="login-form" action="{{ url_for('users.login_user') }}" method="POST">
                <div class="form-group">
                    <span class="glyphicon glyphicon-user"><label for="email">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <span class="glyphicon glyphicon-lock"><label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-log-in"></span> Log in</button>
            </form>
        </div>
    </div>
{% endblock %}